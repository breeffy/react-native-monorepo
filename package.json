{
  "name": "@breeffy/react-native-ui",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react",
      "**/react-dom",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-web",
      "**/@react-navigation/native",
      "**/@react-navigation/native-stack",
      "**/react-native-screens",
      "**/react-native-safe-area-context"
    ]
  },
  "scripts": {
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock"
  }
}
